// Migrated from malcontent: os/signal/send.yara

rule kill: harmless {
  meta:
    confidence  = "0.66"
    syscall     = "kill"
    pledge      = "proc"

  strings:
$kill = "_kill" fullword
    $go   = "syscall.Kill" fullword
    $npm  = "process.kill" fullword
  condition:
    any of them
}

rule kill_unusual: high {
  meta:
    description = "sends unusual kill signal"
    confidence  = "0.66"
    syscall     = "kill"
    pledge      = "proc"

  strings:
$kill = /kill -[245678]{1,3}/
  condition:
    any of them
}
