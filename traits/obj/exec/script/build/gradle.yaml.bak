composite_rules:
  - id: gradle-malicious-execution
    description: Gradle build script executes malicious payload (e.g., calc.exe)
    crit: hostile
    conf: 0.9
    all:
      - id: cap/process/create/script/gradle::exec-task
      - id: cap/process/create/script/gradle::command-line
      - any:
          - id: cap/data/string/payload/calc::calc