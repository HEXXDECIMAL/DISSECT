# Simple POSIX Backdoor Logic
composite_rules:
  - id: simple-udp-bind-shell
    desc: UDP Bind Shell (bind+dup2+system)
    crit: suspicious
    conf: 0.85
    all:
      - id: cap/comm/socket/udp/unix::sock-dgram
      - id: cap/comm/socket/bind::bind
      - id: cap/process/fd/dup::dup2
      - any:
          - id: cap/process/create/shell::system-fn
          - id: cap/process/create/shell::shell-symbols

  - id: hostile-udp-bind-shell
    desc: Hostile UDP Bind Shell (w/ Malware Strings)
    crit: hostile
    conf: 0.95
    all:
      - id: simple-udp-bind-shell
      - id: cap/data/text/malware/backdoor::generic-terms
