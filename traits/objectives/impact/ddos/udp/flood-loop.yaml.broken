composite_rules:
  - id: udp-flood-loop
    desc: Infinite loop sending network data (DDoS)
    crit: suspicious
    conf: 0.8
    mbc: "C0005"  # Flooding
    attack: "T1498" # Network Denial of Service
    all:
      - id: micro-behaviors/data/control-flow/loop/infinite::infinite-loop-header
      - id: micro-behaviors/communications/socket/send::send-call-raw
    near_lines: 20
